        <mysql.version>5.1.42</mysql.version>
        <h2.version>1.4.195</h2.version>
        <embedded-redis.version>0.6</embedded-redis.version>
        <spring-boot-admin.version>1.5.4</spring-boot-admin.version>
        <sonar.host.url></sonar.host.url>
        <sonar.java.coveragePlugin>jacoco</sonar.java.coveragePlugin>
        <sonar.version>3.3.0.603</sonar.version>
        <sharding-jdbc.version>2.0.0.M1</sharding-jdbc.version>
        <logback-elasticsearch-appender.version>1.6</logback-elasticsearch-appender.version>
        <api.file.name>index</api.file.name>
        <sonar.host.url>http://10.200.131.24:9000</sonar.host.url>
    </properties>

    <developers>
        <developer>
            <name>蒋震宇</name>
            <email>i@sunisle.org</email>
            <organization>ecfront</organization>
            <organizationUrl>http://www.ecfront.com</organizationUrl>
        </developer>
        <developer>
            <name>潘帅伟</name>
            <email>hzpsw@tairanchina.com</email>
        </developer>
        <developer>
            <name>葛佳兴</name>
