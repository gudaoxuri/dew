<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- 引用 Dew的 parent-starter -->
    <parent>
        <groupId>ms.dew</groupId>
        <artifactId>parent-starter</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>

    <groupId>ms.dew.devops.it</groupId>
    <artifactId>todo-parent</artifactId>
    <packaging>pom</packaging>

    <properties>
        <sonar.skip>true</sonar.skip>
        <dew.devops.it.repository.id>trc-releases</dew.devops.it.repository.id>
        <dew.devops.it.repository.url>http://121.41.17.205:18081/nexus/content/repositories/releases/</dew.devops.it.repository.url>
        <dew.devops.it.snapshotRepository.id>trc-snapshots</dew.devops.it.snapshotRepository.id>
        <dew.devops.it.snapshotRepository.url>http://121.41.17.205:18081/nexus/content/repositories/snapshots/</dew.devops.it.snapshotRepository.url>
    </properties>

    <modules>
        <module>backend/libraries/common</module>
        <module>backend/services/kernel</module>
        <module>backend/services/notifier</module>
        <module>backend/services/compute</module>
        <module>frontend</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>ms.dew.devops.it</groupId>
                <artifactId>todo-common</artifactId>
                <version>2.0.0-SNAPSHOT</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>

    </dependencies>

    <distributionManagement>
        <repository>
            <id>${dew.devops.it.repository.id}</id>
            <url>${dew.devops.it.repository.url}</url>
        </repository>
        <snapshotRepository>
            <id>${dew.devops.it.snapshotRepository.id}</id>
            <url>${dew.devops.it.snapshotRepository.url}</url>
        </snapshotRepository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>${dew.devops.it.snapshotRepository.id}</id>
            <url>${dew.devops.it.snapshotRepository.url}</url>
        </repository>
        <repository>
            <id>central</id>
            <url>https://repo.maven.apache.org/maven2</url>
        </repository>
        <repository>
            <id>oss-public</id>
            <url>https://oss.sonatype.org/content/groups/public</url>
        </repository>
        <repository>
            <id>oss-snapshot</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
            <snapshots>
                <enabled>true</enabled>
                <checksumPolicy>warn</checksumPolicy>
            </snapshots>
        </repository>
    </repositories>

</project>
