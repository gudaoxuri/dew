            </activation>
            <properties>
                <maven.core.version>3.2.5</maven.core.version>
                <project.build.testSourceDirectory>src/test/3.2.5</project.build.testSourceDirectory>
            </properties>
        </profile>
        <profile>
            <id>maven-core-3.0.5</id>
            <activation>
